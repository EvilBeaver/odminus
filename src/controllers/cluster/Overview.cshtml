
<h2 class="divided">
    Кластер серверов @Model.Имя()
    <a class="button" 
        asp-controller="clusters" 
        asp-action="edit"
        asp-route-id="@Model.Ид()">Свойства кластера</a>
</h2>

<p class="mt-3 mb-2">
    <strong>Базы данных</strong>
    @await Component.InvokeAsync("databases",new {mode = "overview", cluster = Model})
</p>

<p class="mt-3 mb-2">
    <strong>Рабочие серверы</strong>
    @await Component.InvokeAsync("servers",new {mode = "overview", cluster = Model})
</p>

<p class="divided">
    Рабочие процессы
</p>

<p class="divided">
    Сеансы
</p>

<p class="divided">
    Соединения
</p>